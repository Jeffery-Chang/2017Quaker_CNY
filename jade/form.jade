//- 一個檔案只能extends一次
extends ./include/layout.jade
//- 插入每頁自己的樣式
block own_style
	link(rel = 'stylesheet', href = 'css/form.css')
// main content
block content
	.wrap
		//oblique bg
		.redbg
		//result
		.form.firstcontent
			//fill in
			.formcontent
				h2.calligraphy 填寫抽獎資料
				.formlist
					.forminput
						span 姓名
						input(type="text" placeholder=""  name="name" )
					.forminput
						span 手機
						input(type="tel" placeholder=""  name="tel" )
					.forminput
						span E-mail
						input(type="email" placeholder=""  name="email" )
					//checkbox
					.sb-checkbox
						input#check1.sb-checkbox__input(type='checkbox', name='check1')
						label.sb-checkbox__label.sb-checkbox__label--black(for='check1')
						p 我同意參加活動，已詳閱並同意<a href="#"><b>活動辦法</b></a>，同意以上資料作為本次抽獎通知使用
				//btn
				ul.btnwrap
					li.redbutton
						a(href="#")
							button
								span
									img(src="../asset/svg/submit.svg" width="18px") 
									span 送出
			// submit successful
			.formcontent(style="display:none;")
				h2.calligraphy 資料成功送出
				.formlist
					p.successtxt
						活動得獎名單將於<br><span>2017/2/10 於本站公告</span><br>祝您幸運中獎！
				//btn
				ul.btnwrap
					li.redbutton
						a(href="#")
							button
								span
									img(src="../asset/svg/submit.svg" width="18px") 
									span 送出
	//right-bottom-corner product
	include include/product
